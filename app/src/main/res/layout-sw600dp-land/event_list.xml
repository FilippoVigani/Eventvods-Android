<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_marginLeft="16dp"
	android:layout_marginRight="16dp"
	android:baselineAligned="false"
	android:divider="?android:attr/dividerHorizontal"
	android:orientation="horizontal"
	android:showDividers="middle"
	tools:context=".EventListActivity">

	<!--
    This layout is a two-pane layout for the Events
    master/detail flow.
    
    -->

	<android.support.v7.widget.RecyclerView
		android:id="@+id/event_list"
		android:name="com.filippovigani.eventvods.EventListFragment"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginLeft="16dp"
		android:layout_marginRight="16dp"
		app:layoutManager="android.support.v7.widget.LinearLayoutManager"
		tools:context=".EventListActivity"
		tools:listitem="@layout/event_list_content"
		tools:showIn="@layout/activity_event_list"/>

	<FrameLayout
		android:id="@+id/event_detail_container"
		android:layout_width="0dp"
		android:layout_height="match_parent"
		android:layout_weight="3" />

</LinearLayout>