<?xml version="1.0" encoding="utf-8"?>
<layout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".EventContentFragment">
	<data>
		<variable name="viewModel" type="com.filippovigani.eventvods.models.Match" />
	</data>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="@dimen/card_spacing"
		android:layout_marginTop="@dimen/card_spacing"
		android:layout_marginRight="@dimen/card_spacing"
		>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@{viewModel.team1.name}"/>
		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@{viewModel.team2.name}"/>

	</android.support.v7.widget.CardView>
</layout>